<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	  xmlns:core="using:Microsoft.Xaml.Interactions.Core"
	  x:Class="Dynamic_Reader.Views.Library"
	  DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
	  mc:Ignorable="d">
	<Page.Resources>
		<DataTemplate x:Key="BooksJumpTemplate">
			<Border Padding="5">
				<Border Width="82"
						Height="82"
						Background="{StaticResource PhoneAccentBrush}"
						HorizontalAlignment="Left">
					<TextBlock Text="{Binding Group.Key}"
							   FontSize="48"
							   Padding="6"
							   HorizontalAlignment="Left"
							   VerticalAlignment="Center" />
				</Border>
			</Border>
		</DataTemplate>

		<DataTemplate x:Key="BookItemTemplate">
			<Grid Margin="0,2.5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="90px" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid Grid.Column="0">
					<Image Source="{Binding Cover}"
						   Height="115"
						   Stretch="Fill"
						   HorizontalAlignment="Left" />
					<TextBlock FontSize="20"
							   Foreground="Black"
							   FontWeight="ExtraBold"
							   Margin="2"
							   Visibility="{Binding Cover,Converter={StaticResource BookTitleConverter}}"
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"
							   TextWrapping="WrapWholeWords"
							   Text="{Binding Title}"
							   FontFamily="Global User Interface" />
				</Grid>
				<StackPanel Margin="12,0,0,0"
							Grid.Column="1"
							VerticalAlignment="Top">
					<TextBlock Text="{Binding Title, Mode=OneWay}"
							   Style="{StaticResource TitleTextBlockStyle}"
							   HorizontalAlignment="Left"
							   Margin="0"
							   VerticalAlignment="Top" />

					<StackPanel Orientation="Horizontal"
								Margin="0">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<TextBlock Text="File name: "
									   Grid.Row="0"
									   Margin="0"
									   FontSize="15"
									   Grid.Column="0"
									   VerticalAlignment="Bottom"
									   FontFamily="Global User Interface" />

							<TextBlock Text="{Binding FileName, Mode=OneWay}"
									   Grid.Row="0"
									   FontSize="15"
									   Margin="2,0,0,0"
									   Grid.Column="1"
									   VerticalAlignment="Bottom" />

							<TextBlock Text="Author: "
									   Grid.Row="1"
									   Margin="0"
									   FontSize="15"
									   Grid.Column="0"
									   VerticalAlignment="Bottom" />

							<TextBlock Text="{Binding Author, Mode=OneWay}"
									   Grid.Row="1"
									   Margin="2,0,0,0"
									   FontSize="15"
									   Grid.Column="1"
									   VerticalAlignment="Bottom"
									   FontFamily="Global User Interface" />

							<TextBlock Text="Percent read: "
									   Grid.Row="2"
									   Margin="0"
									   FontSize="15"
									   Grid.Column="0"
									   VerticalAlignment="Bottom" />
							<TextBlock Grid.Row="2"
									   Grid.Column="1"
									   FontSize="15"
									   Margin="2,0,0,0"
									   VerticalAlignment="Bottom"><Run Text="{Binding PercentageRead}" /> <Run Text="%" /></TextBlock>
						</Grid>

					</StackPanel>
					<ProgressBar Value="{Binding PercentageRead}"
								 FontFamily="Portable User Interface"
								 Margin="8,0,0,0" />
				</StackPanel>
			</Grid>
		</DataTemplate>
		<CollectionViewSource x:Key="BookGroups"
							  Source="{Binding BooksByTitle}"
							  IsSourceGrouped="True" />

		<DataTemplate x:Key="BookGroupHeaderTemplate">
			<Border Padding="5">
				<Border Width="60"
						Height="60"
						Background="{StaticResource PhoneAccentBrush}"
						HorizontalAlignment="Left">
					<TextBlock Text="{Binding Key}"
							   FontSize="30"
							   Padding="6"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   FontFamily="Global User Interface" />
				</Border>
			</Border>
		</DataTemplate>
	</Page.Resources>

